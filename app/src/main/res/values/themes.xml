<!--        <item name="messageReceivedTextColor">@color/message_text_received</item>-->
<!--        <item name="messageTimeColor">@color/message_time</item>-->

        <!-- Shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NexTalk.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.NexTalk.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.NexTalk.LargeComponent</item>
    </style>

</resources>